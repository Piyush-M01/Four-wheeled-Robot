<?xml version="1.0"?>
<robot name="wheeled_bot">
	<material name="blue">
		<color rgba="0 0 1 1"/>
	</material>
	<material name="red">
		<color rgba="1 0 0 1"/>
	</material>
	<gazebo reference="base_link">
  		<material>Gazebo/Blue</material>
	</gazebo>
	<gazebo reference="forewheel1_link">
		<mu1>0.02</mu1>
    		<mu2>0.02</mu2>
  		<material>Gazebo/Red</material>
	</gazebo>
	<gazebo reference="forewheel2_link">
		<mu1>0.02</mu1>
    		<mu2>0.02</mu2>
  		<material>Gazebo/Red</material>
	</gazebo>
	<gazebo reference="backwheel1_link">
		<mu1>0.02</mu1>
    		<mu2>0.02</mu2>
  		<material>Gazebo/Red</material>
	</gazebo>
	<gazebo reference="backwheel2_link">
		<mu1>0.02</mu1>
    		<mu2>0.02</mu2>
 		<material>Gazebo/Red</material>
	</gazebo>
	<link name="base_link">
	<pose>0 0 0.1 0 0 0</pose>
		<visual>
		<geometry>
			<box size="0.5 1 0.25"/>
			
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0"/>
		<material name="blue"/>
		</visual>
		<collision>
		<geometry>
			<box size="0.5 1 0.25"/>
		</geometry>

		</collision>
		 <inertial>
      			<mass value="50"/>
      			<inertia ixx="00.395416666667" ixy="0" ixz="0" iyy="01.06208333333" iyz="0" izz="01.06208333333"/>
    		</inertial>
		
	</link>
	
	<link name="forewheel1_link">
		<visual>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
			<!--mesh filename="package://my_robot/materials/Wheel Piyush v1.stl" scale="0.01 0.01 0.01"/-->
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</visual>
		<collision>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</collision>
		<inertial>
			<mass value="2"/>
			<inertia ixx="01.333" ixy="0.0" ixz="0.0" iyy="1.333" iyz="0.0" izz="2"/>
		</inertial>
	</link>
	
	<link name="forewheel2_link">
		<visual>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</visual>
		<collision>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</collision>
		<inertial>
			<mass value="2"/>
			<inertia ixx="1.333" ixy="0.0" ixz="0.0" iyy="1.333" iyz="0.0" izz="2"/>
		</inertial>
	</link>

	<link name="backwheel1_link">
		<visual>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</visual>
		<collision>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</collision>
		<inertial>
			<mass value="2"/>
			<inertia ixx="1.333" ixy="0.0" ixz="0.0" iyy="1.333" iyz="0.0" izz="2"/>
		</inertial>
	</link>

	<link name="backwheel2_link">
		<visual>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</visual>
		<collision>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</collision>
		<inertial>
			<mass value="2"/>
			<inertia ixx="1.333" ixy="0.0" ixz="0.0" iyy="1.333" iyz="0.0" izz="2"/>
		</inertial>
	</link>

	<joint name="basetof1" type="continuous">
		<parent link="base_link"/>
		<child link="forewheel1_link"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<origin xyz="-0.25 -0.6 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>
	<joint name="basetof2" type="continuous">
		<parent link="base_link"/>
		<child link="forewheel2_link"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<origin xyz="0.25 -0.6 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>
	<joint name="basetor1" type="continuous">
		<parent link="base_link"/>
		<child link="backwheel1_link"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<origin xyz="0.25 0.6 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>
	<joint name="basetor2" type="continuous">
		<parent link="base_link"/>
		<child link="backwheel2_link"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<origin xyz="-0.25 0.6 0" rpy="0 0 0"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>

	<!-- <xacro:property name="camera_link" value="0.05" />  -->
  <!-- Camera !-->
  <link name="camera_link">
    <collision>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
    <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
    <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="red"/>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

<joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.05 0 0.075" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="camera_link"/>
  </joint>

  	<gazebo reference="camera_link">
		<sensor type="depth" name="camera">
			<update_rate>30.0</update_rate>
			<camera name="head">
				<horizontal_fov>1.047198</horizontal_fov>
				<image>
					<width>640</width>
					<height>480</height>
					<format>R8G8B8</format>
				</image>
				<clip>
					<near>0.05</near>
					<far>3</far>
				</clip>
			</camera>
				<plugin name="camera_controller" filename="libgazebo_ros_openni_kinect.so">
					<baseline>0.2</baseline>
					<alwaysOn>true</alwaysOn>
					<updateRate>30</updateRate>
					<cameraName>my_robot/camera</cameraName>
					<imageTopicName>image_raw</imageTopicName>
					<cameraInfoTopicName>camera_info</cameraInfoTopicName>
					<depthImageTopicName>/my_robot/camera/depth/image_raw</depthImageTopicName>
      				<depthImageInfoTopicName>/my_robot/camera/depth/camera_info</depthImageInfoTopicName>
					<pointCloudTopicName>/my_robot/camera/depth/points</pointCloudTopicName>
					<frameName>camera_link</frameName>
					<pointCloudCutoff>0.5</pointCloudCutoff>
      				<pointCloudCutoffMax>3.0</pointCloudCutoffMax>
					<distortionK1>0.00000001</distortionK1>
					<distortionK2>0.00000001</distortionK2>
					<distortionK3>0.00000001</distortionK3>
					<distortionT1>0.00000001</distortionT1>
					<distortionT2>0.00000001</distortionT2>
					<CxPrime>0</CxPrime>
					<Cx>0</Cx>
					<Cy>0</Cy>
					<focalLength>0</focalLength>
					<hackBaseline>0</hackBaseline>
				</plugin>
		</sensor>
  	</gazebo>

	<gazebo>
	<plugin filename="libgazebo_ros_skid_steer_drive.so" name="steer_drive_controller">
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftFrontJoint>basetor1</leftFrontJoint>
      <rightRearJoint>basetof1</rightRearJoint>
      <leftRearJoint>basetor2</leftRearJoint>
      <rightFrontJoint>basetof2</rightFrontJoint>
      <wheelSeparation>1.2</wheelSeparation>
      <wheelDiameter>0.4</wheelDiameter>
      <torque>100</torque>
      <covariance_x> 0.000100</covariance_x>
      <covariance_y> 0.000100</covariance_y>
      <covariance_yaw>0.0100 </covariance_yaw>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <broadcastTF>1</broadcastTF>
      <robotBaseFrame>base_link</robotBaseFrame>
    </plugin>
	</gazebo>

</robot>

