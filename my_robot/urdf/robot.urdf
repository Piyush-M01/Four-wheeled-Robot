<?xml version="1.0"?>
<robot name="wheeled_bot">
	<material name="blue">
		<color rgba="0 0 1 1"/>
	</material>
	<material name="red">
		<color rgba="1 0 0 1"/>
	</material>
	<gazebo reference="base_link">
  		<material>Gazebo/Blue</material>
	</gazebo>
	<gazebo reference="forewheel1_link">
  		<material>Gazebo/Red</material>
	</gazebo>
	<gazebo reference="forewheel2_link">
  		<material>Gazebo/Red</material>
	</gazebo>
	<gazebo reference="backwheel1_link">
  		<material>Gazebo/Red</material>
	</gazebo>
	<gazebo reference="backwheel2_link">
 		 <material>Gazebo/Red</material>
	</gazebo>
	<link name="base_link">
		<visual>
		<geometry>
			<box size="0.5 1 0.1"/>
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0"/>
		<material name="blue"/>
		</visual>
		<collision>
		<geometry>
			<box size="0.5 1 0.1"/>
		</geometry>
		<material name="blue"/>
		</collision>
		 <inertial>
      			<mass value="5"/>
      			<inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    		</inertial>
		
	</link>
	
	<link name="forewheel1_link">
		<visual>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</visual>
		<collision>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</collision>
		<inertial>
			<mass value="0.2"/>
			<inertia ixx="0.1333" ixy="0.0" ixz="0.0" iyy="0.1333" iyz="0.0" izz="0.2"/>
		</inertial>
	</link>
	
	<link name="forewheel2_link">
		<visual>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</visual>
		<collision>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</collision>
		<inertial>
			<mass value="0.2"/>
			<inertia ixx="0.1333" ixy="0.0" ixz="0.0" iyy="0.1333" iyz="0.0" izz="0.2"/>
		</inertial>
	</link>

	<link name="backwheel1_link">
		<visual>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</visual>
		<collision>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</collision>
		<inertial>
			<mass value="0.2"/>
			<inertia ixx="0.1333" ixy="0.0" ixz="0.0" iyy="0.1333" iyz="0.0" izz="0.2"/>
		</inertial>
	</link>

	<link name="backwheel2_link">
		<visual>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</visual>
		<collision>
		<geometry>
			<cylinder length="0.2" radius="0.2"/>
		</geometry>
		<material name="red"/>
		<origin xyz="0 0 0" rpy="1.57 1.57 0" />
		</collision>
		<inertial>
			<mass value="0.2"/>
			<inertia ixx="0.1333" ixy="0.0" ixz="0.0" iyy="0.1333" iyz="0.0" izz="0.2"/>
		</inertial>
	</link>

	<joint name="basetof1" type="continuous">
		<parent link="base_link"/>
		<child link="forewheel1_link"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<origin xyz="-0.25 -0.6 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>
	<joint name="basetof2" type="continuous">
		<parent link="base_link"/>
		<child link="forewheel2_link"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<origin xyz="0.25 -0.6 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>
	<joint name="basetor1" type="continuous">
		<parent link="base_link"/>
		<child link="backwheel1_link"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<origin xyz="0.25 0.6 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>
	<joint name="basetor2" type="continuous">
		<parent link="base_link"/>
		<child link="backwheel2_link"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<origin xyz="-0.25 0.6 0" rpy="0 0 0"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>

<gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftJoint>basetor1</leftJoint>
      <rightJoint>basetof1</rightJoint>
      <leftJoint>basetor2</leftJoint>
      <rightJoint>basetof2</rightJoint>
      <wheelSeparation>1.2</wheelSeparation>
      <wheelDiameter>0.4</wheelDiameter>
      <torque>0.1</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
    </plugin>
  </gazebo>
</robot>
